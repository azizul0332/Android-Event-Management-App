<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="#FDDA0D"
    android:orientation="vertical">

  <TextView
      android:id="@+id/text_view_id"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="Event Information"
      android:textSize="30dp"
      android:textStyle="bold" />

  <TableLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="@color/white"
      >
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

      <TextView
          android:text="Name"
          android:textStyle="bold"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"

          />

      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:id="@+id/txtName"
          android:inputType="text"/>

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

      <TextView
          android:text="Place"
          android:textStyle="bold"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          />

      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:id="@+id/txtPlace"
          android:inputType="text"/>

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

      <TextView
          android:text="Type"
          android:textStyle="bold"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          />

      <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingRight="50dp"
          android:orientation="horizontal"
          android:id="@+id/radioGroup">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indoor"
            android:onClick="onRadioButtonClicked"
            android:id="@+id/radioButton"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outdoor"
            android:onClick="onRadioButtonClicked"
            android:id="@+id/radioButton2"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online"
            android:onClick="onRadioButtonClicked"
            android:id="@+id/radioButton3"/>
      </RadioGroup>

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

      <TextView
          android:text="date_time"
          android:textStyle="bold"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          />

      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:id="@+id/txtDate"
          android:inputType="datetime"/>

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

      <TextView
          android:text="Capacity"
          android:textStyle="bold"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          />

      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:id="@+id/txtCapacity"
          android:inputType="number"/>

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

      <TextView
          android:text="Budget"
          android:textStyle="bold"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          />

      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:id="@+id/txtBudget"
          android:inputType="number"/>

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

      <TextView
          android:text="Email"
          android:textStyle="bold"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          />

      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:id="@+id/txtEmail"
          android:inputType="textEmailAddress"/>

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

      <TextView
          android:text="Phone"
          android:textStyle="bold"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          />

      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="11"
          android:id="@+id/txtPhone"
          android:inputType="number"/>

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

      <TextView
          android:text="Description"
          android:textStyle="bold"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          />

      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:id="@+id/txtDescription"
          android:inputType="text"/>

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="190dp"
          android:layout_weight="3"
          android:gravity="center"
          android:hint="Error messages will be here"
          android:textColorHint="#FF0000"
          android:id="@+id/resultView"

          />


    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        >

      <Button xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/button_cancel"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Cancel"
          android:backgroundTint="#FDDA0D"
          android:textColor="@color/black"
          android:onClick="cancelEvent"
          />
      <Button xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/button_share"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Share"
          android:backgroundTint="#FDDA0D"
          android:textColor="@color/black"
          android:onClick="shareEvent"
          />
      <Button xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/button_save"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Save"
          android:textColor="@color/black"
          android:backgroundTint="#FDDA0D"

          />

    </TableRow>

  </TableLayout>


</LinearLayout>